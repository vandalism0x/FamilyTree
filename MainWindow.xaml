<Window x:Class="FamilyTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl HorizontalAlignment="Stretch" Name="tabControl1">
            <TabItem Header="Проекты" Name="projectsTab">
                <Grid>
                    <Button Content="Загрузить" Height="23" HorizontalAlignment="Right" Name="loadProjectButton" VerticalAlignment="Bottom" Width="75" Click="loadProjectButton_Click" />
                    <Button Content="Новый" Height="23" HorizontalAlignment="Left" Name="newProjectButton" VerticalAlignment="Bottom" Width="75" Click="newProjectButton_Click" />
                    <Button Content="Удалить" Height="23" HorizontalAlignment="Left" Name="deleteProjectButton" VerticalAlignment="Bottom" Width="75" Margin="81,0,0,0" Click="deleteProjectButton_Click" />
                    <ListBox Height="Auto" HorizontalAlignment="Stretch" Name="projectsListBox" VerticalAlignment="Top" Width="Auto" MouseDoubleClick="projectsListBox_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <TextBlock Text="{Binding Path=Name}"></TextBlock>
                                </WrapPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Персоны" Name="personsTab">
                <Grid>
                    <DataGrid Height="Auto" HorizontalAlignment="Left" Name="personsDataGrid" VerticalAlignment="Top" Width="Auto" MouseDoubleClick="personsDataGrid_MouseDoubleClick" AutoGeneratedColumns="personsDataGrid_AutoGeneratedColumns" AutoGenerateColumns="True" IsEnabled="True" SelectionMode="Single" />
                    <Button Content="Добавить" Height="23" HorizontalAlignment="Left" Name="addPersonButton" VerticalAlignment="Bottom" Width="75" Click="addPersonButton_Click" />
                    <Button Content="Удалить" Height="23" HorizontalAlignment="Left" Name="deletePersonButton" VerticalAlignment="Bottom" Width="75" Margin="81,0,0,0" />
                </Grid>
            </TabItem>
            <TabItem Header="Материалы" Name="materialsTab">
                <Grid>
                    <ListBox Width="Auto" Height="Auto"></ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="События" Name="eventsTab" />
        </TabControl>
        <Menu Height="23" HorizontalAlignment="Left" Name="menu1" VerticalAlignment="Top"></Menu>
    </Grid>
</Window>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          